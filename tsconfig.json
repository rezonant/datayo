{
    "compilerOptions": {
        "outDir": "dist",
        "target": "es2016",
        "module": "commonjs",
        "rootDir": "src",
        "moduleResolution": "node",
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "lib": [
            "DOM",
            "es2015",
            "es2018.asynciterable"
        ],
        "types": [
            "reflect-metadata"
        ]
    },
    "include": [
        "./src/**/*.ts"
    ]
}